<resources>

    <style name="DetailTipValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DetailTipKeyStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainItemTitleStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainItemPercentStyle" parent="MainItemTitleStyle">
        <item name="fontFamily">monospace</item>
    </style>

    <style name="MainItemTextStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MainItemXSmallTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainItemSmallTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainItemMediumTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WhiteProgressTheme" parent="Theme.AppCompat.Light" >
        <item name="colorAccent">@color/white$1</item>
    </style>

    <style name="MainItemLayoutStyle">
        <item name="android:padding">16dp</item>
    </style>

    <style name="PlayActivityToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white$1</item>
        <item name="colorPrimary">@color/white$1</item>
    </style>

    <style name="PlayActivityToolbarPopStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/white$2</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="ModelDetailActivityUpperItemCardStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="ModelDetailActivityUpperItemKeyStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ModelDetailActivityUpperItemValueStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
