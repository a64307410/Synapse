<resources>

    <style name="DetailTipValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DetailTipKeyStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainItemTitleStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainItemTextStyle">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MainItemXSmallTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainItemSmallTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainItemMediumTextStyle" parent="MainItemTextStyle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="CircleProgressTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="MainItemLayoutStyle">
        <item name="android:padding">16dp</item>
    </style>

</resources>
