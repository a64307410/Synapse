<?xml version="1.0" encoding="utf-8"?>
<io.whz.synapse.element.AutoFitWidthCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    tools:layout_marginBottom="@dimen/list_item_vertical_gap"
    tools:layout_gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/red_paper"
        android:adjustViewBounds="true" />

    <LinearLayout
        style="@style/MainItemLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/MainItemTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_item_play_title" />

        <TextView
            style="@style/MainItemSmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_item_play_msg" />

    </LinearLayout>

    <ImageView
        style="?android:borderlessButtonStyle"
        android:id="@+id/play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:clickable="false"
        app:srcCompat="@drawable/ic_arrow_forward_24dp"
        app:tint="@color/icon"
        />

</io.whz.synapse.element.AutoFitWidthCardView>