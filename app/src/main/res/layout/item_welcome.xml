<?xml version="1.0" encoding="utf-8"?>
<io.whz.synapse.element.AutoFitWidthCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    tools:layout_marginBottom="@dimen/list_item_vertical_gap"
    tools:layout_gravity="center">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/red_sun"
        android:adjustViewBounds="true" />

    <LinearLayout
        style="@style/MainItemLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/MainItemTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome" />

        <TextView
            style="@style/MainItemSmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/text_welcome_text" />

    </LinearLayout>

    <Button
        style="?android:borderlessButtonStyle"
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:text="@string/data_unready"
        android:textColor="@color/data_unready_text"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:indeterminate="true"
        android:theme="@style/WhiteProgressTheme"
        android:visibility="gone"
        tools:visibility="visible"
        />

</io.whz.synapse.element.AutoFitWidthCardView>