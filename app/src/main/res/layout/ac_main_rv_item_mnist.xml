<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="3dp"
    tools:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >
        <TextView
            style="@style/TitleText"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mnist_title"
            />

        <TextView
            style="@style/BodyText"
            android:id="@+id/training_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="12dp"
            android:text="@string/training_image_data"
            />

        <TextView
            style="@style/DataSetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/training_data"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/training_data"
            android:text="@string/training_data_number"
            />

        <TextView
            style="@style/BodyText"
            android:id="@+id/test_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/training_data"
            android:layout_marginTop="8dp"
            android:text="@string/test_image_data"
            />

        <TextView
            style="@style/DataSetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/test_data"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/test_data"
            android:text="@string/test_data_number"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/download_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/state_download"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="@string/download"
            />

        <TextView
            android:id="@+id/downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/state_download"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/data_ready"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>